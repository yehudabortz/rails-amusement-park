
<%= form_for @user do |f| %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :password_digest %>
  <%= f.password_field :password %>
</div>

<div class="field">
 <%= f.label :nausea %>
 <%= f.number_field :nausea %>
</div>

<div class="field">
 <%= f.label :mood %>
 <%= f.number_field :happiness %>
</div>

<div class="field">
 <%= f.label :tickets %>
 <%= f.number_field :tickets %>
</div>

<div class="field">
 <%= f.label "Check box if you are a theme park owner" %>
 <%= f.check_box :admin %>
</div>
<div class="field">
 <%= f.label :height %>
 <%= f.number_field :height %>
</div>

<div class="actions">
 <%= f.submit %>
</div>

<% end %>