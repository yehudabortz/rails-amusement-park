<p id="notice"><%= notice %></p>

<h1>Attractions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nausea rating</th>
      <th>Happiness rating</th>
      <th>Min height</th>
      <th>Tickets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><%= attraction.name %></td>
        <td><%= attraction.nausea_rating %></td>
        <td><%= attraction.happiness_rating %></td>
        <td><%= attraction.min_height %></td>
        <td><%= attraction.tickets %></td>
        <% if admin? %>
        <td><%= link_to "Show #{attraction.name}", attraction_path(attraction) %></td>
        <% else %>
      <td><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></td>
        <% end %>



      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attraction', new_attraction_path %>
